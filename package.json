{
  "name": "va-web",
  "version": "1.0.0",
  "description": "OPH Valtionavustus Web UI",
  "repository": {
    "type": "git",
    "url": "https://github.com:Opetushallitus/va.git"
  },
  "dependencies": {
    "babelify": "^6.0.2",
    "browserify": "^9.0.8",
    "minifyify": "^6.4.0",
    "react": "^0.13.2",
    "baconjs": "^0.7.59",
    "lodash": "^3.9.3",
    "qwest": "^1.6.0",
    "query-string": "2.2.0"
  },
  "devDependencies": {
    "watchify": "^3.2.0",
    "mocha-phantomjs": "^3.5.3",
    "phantomjs": "^1.9"
  },
  "private": false,
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "build-app": "browserify web/va/VaApp.jsx -o resources/public/js/app.js",
    "build": "npm run build-app",
    "watch-app": "watchify web/va/VaApp.jsx -o resources/public/js/app.js --debug --verbose",
    "watch": "npm run watch-app"
  }
}
