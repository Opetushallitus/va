<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
  <Appenders>
    <Console name="ApplicationLog" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} %-5p [%t] %c: %m%n"/>
    </Console>
    <Console name="AccessLog" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} %-5p [%t] ACCESS: %m%n"/>
    </Console>
    <SMTP name="Mail" subject="[${sys:log4j.email.environment}] Virhe palvelimella" to="to@test.com" from="from@test.com" smtpHost="localhost" smtpPort="42069" bufferSize="20">
      <BurstFilter level="error" rate="1" maxBurst="5"/>
      <PatternLayout pattern="%d{ISO8601} %-5p [%t] %c: %m%n"/>
    </SMTP>
  </Appenders>
  <Loggers>
    <Logger name="oph" level="trace" additivity="false">
      <AppenderRef ref="ApplicationLog"/>
      <AppenderRef ref="Mail" level="error"/>
    </Logger>
    <Logger name="ring" level="trace" additivity="false">
      <AppenderRef ref="AccessLog"/>
      <AppenderRef ref="Mail" level="error"/>
    </Logger>
    <Root level="info">
      <AppenderRef ref="ApplicationLog"/>
      <AppenderRef ref="Mail" level="error"/>
    </Root>
  </Loggers>
</Configuration>
