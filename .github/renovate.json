{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "onboarding": false,
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Dependency Dashboard self-hosted",
    "gitAuthor": "Self-hosted Renovate Bot <130737409+valtionavustus-renovate[bot]@users.noreply.github.com>",
    "username": "valtionavustus-renovate[bot]",
    "branchPrefix": "github-renovate/",
    "platform": "github",
    "includeForks": false,
    "ignoreTests": false,
    "automergeType": "pr",
    "schedule": ["every weekend", "after 5pm and before 5am"],
    "automergeSchedule": ["every weekend", "after 5pm and before 5am"],
    "platformAutomerge": true,
    "automerge": true,
    "repositories": ["Opetushallitus/valtionavustus"],
    "enabledManagers": [
      "nvm",
      "npm",
      "github-actions",
      "leiningen",
      "dockerfile"
    ],
    "packageRules": [
      {
        "matchDatasources": ["clojure"],
        "registryUrls": [
          "https://repo1.maven.org/maven2/",
          "https://repo.clojars.org/",
          "https://artifactory.opintopolku.fi/artifactory/oph-sade-release-local"
        ]
      },
      {
        "matchPackageNames": [
          "playwright-chromium",
          "@playwright/test",
          "mcr.microsoft.com/playwright"
        ],
        "groupName": "playwright packages"
      },
      {
        "matchPackageNames": [
          "react",
          "react-dom",
          "@types/react",
          "@types/react-dom"
        ],
        "groupName": "react packages"
      },
      {
        "matchPackageNames": [
          "@reduxjs/toolkit",
          "react-redux"
        ],
        "groupName": "redux packages"
      },
      {
        "matchManagers": ["nvm", "npm", "dockerfile"],
        "matchPackageNames": ["@types/node", "node"],
        "updateTypes": ["major"],
        "groupName": "Node.js major updates",
        "description": "Node.js version limited to 16 until we don't use CentOS 7 any more (node 18 and above require a newer glibc version than is available on CentOS 7)",
        "enabled": false
      },
      {
        "matchManagers": ["nvm", "npm", "dockerfile"],
        "matchPackageNames": ["@types/node", "node"],
        "updateTypes": ["minor", "patch"],
        "groupName": "Node.js"
      },
      {
        "matchManagers": ["dockerfile"],
        "matchPackageNames": ["eclipse-temurin"],
        "versioning": "regex:^(?<major>\\d+)(((\\.|u)(?<minor>\\d+))?(\\.(?<patch>\\d+))?((_|-b)(?<build>\\d+))?)-(?<compatibility>.*)$"
      },
      {
        "matchPackageNames": ["eclipse-temurin"],
        "matchUpdateTypes": ["major"],
        "enabled": false
      },
      {
        "matchPackageNames": ["com.google.guava:guava"],
        "description": "Custom versioning regex for Guava so that we keep `-android` versions",
        "versioning": "regex:^(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?(-(?<compatibility>.*))?$"
      }
    ],
    "prConcurrentLimit": 5
  }
