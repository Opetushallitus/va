{
  "extends": "./common-tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "soresu-form/*": ["soresu-form/*"]
    }
  },
  "include": [
    "./va-hakija/**/*",
    "./va-virkailija/**/*",
    "./va-common/**/*"
  ],
  "exclude": [
    "node_modules",
    "va-admin-ui/target",
    "va-common/target",
    "va-hakija/target",
    "va-virkailija/target",
    "va-admin-ui/resources",
    "va-common/resources",
    "va-hakija/resources",
    "va-virkailija/resources",
  ]
}
