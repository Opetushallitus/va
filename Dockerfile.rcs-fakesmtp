FROM openjdk:8

RUN git clone https://github.com/Nilhcem/FakeSMTP.git
RUN apt update
RUN apt install maven -y
WORKDIR /FakeSMTP
RUN mvn package -X
VOLUME ["/var/mail"]
EXPOSE 25

ENTRYPOINT ["java","-jar","target/fakeSMTP-2.1-SNAPSHOT.jar","--background", "--output-dir", "/var/mail", "--port", "25", "--start-server"]
